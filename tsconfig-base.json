{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "composite": true,
      "emitDeclarationOnly": true,
      "rootDir": ".",
      "paths": {
        "@pure-ui/*":["package/*"]
      }
    },
    "exclude": ["**/_tests__"]
  }
  