{
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "ES2018",
    "module": "ESNext",
    "jsx": "react",
    "strict": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@pure-ui/*": ["package/*"]
    }
  },
  "exclude": ["**/_tests__"]
}
