{
    "name": "@pure-ui/monorepo",
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": ">=16"
    },
    "private": "true",
    "packageManager": "pnpm@7.3.0",
    "scripts": {
        "test": "vitest",
        "clean": "rimraf packages/*/tsconfig.tsbuildinfo && rimraf packages/*/dist",
        "build": "node scripts/build.mjs && tsc --build",
        "dev": "pnpm --filter playground dev",
        "docs:dev": "pnpm run -C docs dev",
        "docs:build": "pnpm run -C docs build"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "2.0.4",
        "@testing-library/svelte": "^3.2.2",
        "@types/fs-extra": "^11.0.1",
        "@types/lodash-es": "^4.17.7",
        "@types/resolve": "^1.20.2",
        "decode-named-character-reference": "^1.0.2",
        "execa": "^7.1.1",
        "fast-glob": "^3.2.12",
        "fs-extra": "^11.1.1",
        "lerna": "^6.6.1",
        "lodash-es": "^4.17.21",
        "resolve": "^1.22.1",
        "sass": "^1.60.0",
        "svelte": "^3.39.0",
        "svelte-preprocess": "^5.0.3",
        "svelte2tsx": "^0.6.10",
        "typescript": "^5.0.2",
        "vite": "^4.2.1",
        "vitest": "^0.29.8"
    },
    "bundlewatch": {
        "files": [
            {
                "path": "packages/*/dist/index.umd.js"
            }
        ],
        "ci": {
            "repoBranchBase": "main",
            "trackBranches": [
                "main"
            ]
        }
    }
}