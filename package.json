        "packages/*"
    ],
    "engines": {
        "node": ">=16"
    },
    "private": true,
    "packageManager": "pnpm@8.3.1",
    "scripts": {
        "test": "vitest --ui",
        "build": "pnpm --filter pure-ui build",
        "build:theme":"pnpm --filter theme-chalk build",
