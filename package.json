    "dependencies": {
        "@pure-ui/components": "workspace:*",
        "@pure-ui/locale": "workspace:*",
        "@pure-ui/theme-chalk":"workspace:*",
        "pure-ui":"workspace:*"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "2.5.2",
        "lodash-es":"^4.17.21",
        "prettier":"^3.0.3",
        "sass": "^1.62.1",
        "svelte": "^4.2.5",
        "svelte-preprocess": "^5.0.4",
        "svelte2tsx": "^0.6.25",
        "tslib": "^2.5.0",
        "typescript": "^4.9.4",
        "vite": "^4.4.9"
    }
